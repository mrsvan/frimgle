<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:e="urn:import:mobi.nuuvo.frimgle.client.editor"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .maxWidth {
            max-width: 100%;
        }
    </ui:style>

    <g:FlowPanel>
        <e:SmartTextBox ui:field="smartTextBox"/>
        <b:FormGroup>
            <e:ImageUrlEditor addStyleNames="{style.maxWidth}" ui:field="imageUrlEditor"/>
        </b:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>